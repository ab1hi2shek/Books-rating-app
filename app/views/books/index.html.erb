<% if user_signed_in? %>
<h4 align ="center">Welcome <%= current_user.email %></h4>
<% end %>

<h1 class="current-category"><%= params[:category] %></h1>
<% if @books.count==0 %>
	<h3>No books in this Category</h3>
<% else %>
	<% @books.each do |book| %>
		<h2><%= link_to book.title, book_path(book) %></h2>
	<% end %>
<% end %>

